# -*- coding: utf-8 -*-
import sys
from PyQt4.QtGui import QHBoxLayout, QDialog, QPushButton, QApplication, QPalette, QLinearGradient, QColor, QBrush


class Form(QDialog):
    
    def __init__(self, parent=None):
        
        super(Form, self).__init__(parent)
        
        layout = QHBoxLayout()
    
        
        self.b1 = QPushButton("administrateur")
        self.b1.clicked.connect(lambda:self.whichbtn(self.b1))
        self.b1.clicked.connect(self.btnstate)
        self.b1.setFixedSize(100,100)
        layout.addWidget(self.b1, 1)
          
        self.b2 = QPushButton("Eleves")
        self.b2.adjustSize()
        self.b2.setFixedSize(100,100)
        self.b2.clicked.connect(lambda:self.whichbtn(self.b2))
        layout.addWidget(self.b2, 1)
        
        self.setLayout(layout)
        self.setFixedWidth(600)
        self.setFixedHeight(600)
        
        
        style = "QLabel, QToolButton { border : 1px solid red; }"
        self.setStyleSheet(style)
       
        self.setWindowTitle("SchooL Project")

    def btnstate(self):
        if self.b1.isChecked():
            print "button pressed"
        else:
            print "button released"
                    
    def whichbtn(self,b):
        print "clicked button is "+b.text()

def main():
    app = QApplication(sys.argv)
    
    w = Form()
    
    p = QPalette()
    gradient = QLinearGradient(0, 0, 0, 400)
    gradient.setColorAt(0.0, QColor(140, 240, 240))
    gradient.setColorAt(1.0, QColor(240, 140, 160))
    p.setBrush(QPalette.Window, QBrush(gradient))
    w.setPalette(p)
    w.show()
    sys.exit(app.exec_())
    
if __name__ == '__main__':
    main()
